<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="@dimen/listview_date_width"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="1970-01-01"/>

    <TextView
        android:id="@+id/temperature_low"
        android:layout_width="@dimen/listview_temp_width"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/forecast_date"
        android:layout_toEndOf="@id/forecast_date"
        android:text="0"/>

    <TextView
        android:id="@+id/temperature_high"
        android:layout_width="@dimen/listview_temp_width"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/temperature_low"
        android:layout_toEndOf="@id/temperature_low"
        android:text="100"/>

</RelativeLayout>
